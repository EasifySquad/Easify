<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <Description>EasyApi Logging base component to support logging standards</Description>
    <Copyright>ICG</Copyright>
    <PackageProjectUrl>https://github.com/icgam/EasyApi</PackageProjectUrl>
    <RepositoryUrl>https://github.com/icgam/EasyApi</RepositoryUrl>
    <RepositoryType>Private</RepositoryType>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Company>ICG</Company>
    <Authors>Aurimas Gecas, Mohammad Moattar</Authors>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.Logging" Version="2.0.0" />
    <PackageReference Include="Newtonsoft.Json" Version="10.0.3" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Easify.Extensions\Easify.Extensions.csproj" />
    <ProjectReference Include="..\Easify.Logging.Extensions\Easify.Logging.Extensions.csproj" />
  </ItemGroup>

</Project>