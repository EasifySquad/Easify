<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net47</TargetFramework>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <Authors>Aurimas Gecas</Authors>
    <Company>ICG</Company>
    <Description>Library provides hosting infrastructure for .NET Core API to be hosted as a Windows Service</Description>
    <RootNamespace>EasyApi.Hosting.WindowsService</RootNamespace>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Hosting.WindowsServices" Version="2.0.1" />
  </ItemGroup>

  <ItemGroup>
    <Compile Update="InstrumentedWebHostService.cs">
      <SubType>Component</SubType>
    </Compile>
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\EasyApi.Hosting.Core\EasyApi.Hosting.Core.csproj" />
  </ItemGroup>

</Project>
